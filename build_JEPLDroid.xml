<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="deploy_to_distribute" name="JEPLDroid_dev">

	<property file="conf/conf.properties"/>        
	
    <property name="distribution_project" value="${program}/../jepldroid" />

	<path id="classPath">
	    <!-- No needed jar -->
    </path>    
    
    <target name="deploy_to_distribute" depends="deploy_javadoc,deploy_manual">
        <echo message="DO NOT FORGET TO CHANGE DATA in conf.properties, JEPLBoot.getVersion() and generate before PDF and HTML docs" />
        <property name="distribution_project_bin" value="${distribution_project}/bin" />
        <property name="distribution_project_docs" value="${distribution_project}/docs" />

        <!-- Copying compiled classes -->
        <jar basedir="${program.bin}/classes"
             destfile="${distribution_project_bin}/jepldroid.jar"
             includes="jepl/**">
            <manifest>
                <attribute name="Built-By" value="${user.name} - Jose Maria Arranz Santamaria"/>
                <attribute name="Implementation-Title" value="${program.name}" />
                <attribute name="Implementation-Vendor" value="Jose Maria Arranz Santamaria" />
                <attribute name="Implementation-Version" value="${program.version}" />
            </manifest>
        </jar>
       
        <copy file="${program}/LICENSE-2.0.txt" tofile="${distribution_project}/LICENSE-2.0.txt" />        
        <copy file="${program}/README.txt" tofile="${distribution_project}/README.txt" />
        <copy file="${program}/CHANGES.txt" tofile="${distribution_project}/CHANGES.txt" />

        <zip basedir="${distribution_project}" destfile="${distribution_project}/../JEPLDroid_bin_${program.version}.zip " />
        <zip basedir="${program}" destfile="${program}/../JEPLDroid_src_${program.version}.zip " />

    </target>

	<!-- Configurar el path de javadoc.exe si es necesario (Eclipse)
		 http://blog.darevay.com/2008/12/running-javadoc-ant-task-from-eclipse/
	-->
    
    <target name="deploy_javadoc">
        <property name="javadoc_dir" value="${distribution_project}/docs/javadoc" />
        <delete dir="${javadoc_dir}" />
        <javadoc packagenames="jepl.*"
               sourcepath="${program.src}"
               excludepackagenames="jepl.impl.*"
               defaultexcludes="yes"
               destdir="${javadoc_dir}"
               author="true"
               version="true"
               use="true"
               windowtitle="${program.name} v${program.javadoc.prog.version}, doc. version v${program.javadoc.doc.version}">

            <classpath>
                <path refid="classPath"/>
            </classpath>

            <doctitle>
                <![CDATA[
                <h1>${program.name} v${program.javadoc.prog.version} <font size="-1">(doc. version ${program.javadoc.doc.version})</font></h1>
                ]]>
            </doctitle>
            <bottom>
                <![CDATA[
                Copyright Â© 2012 Jose Maria Arranz Santamaria.
                ]]>
            </bottom>
        </javadoc>
    </target>

    <target name="deploy_manual">
        <echo message="PDF and HTML or Reference Manual MUST BE MANUALLY GENERATED from Word document" />
        <property name="program_docs_src" value="${program}/docs_src" />
        <property name="distribution_project_docs" value="${distribution_project}/docs" />

        <copy file="${program_docs_src}/jepldroid_manual.pdf" todir="${distribution_project_docs}" preservelastmodified="true"   />
        <copy file="${program_docs_src}/jepldroid_manual.htm" todir="${distribution_project_docs}" preservelastmodified="true"   />
        <delete dir="${distribution_project_docs}/jepldroid_manual_archivos" />
        <copy todir="${distribution_project_docs}/jepldroid_manual_archivos" >
            <fileset dir="${program_docs_src}/jepldroid_manual_archivos" />
        </copy>
        <exec executable="cmd.exe"> <!-- <chmod> no funciona en Windows -->
          <arg line="/c attrib +R /S"/>
          <arg file="${distribution_project_docs}/*.*"/>
        </exec>
        <copy file="${distribution_project_docs}/jepldroid_manual.pdf" tofile="${distribution_project}/../jepldroid_manual_${program.version}.pdf" />
    </target>
    
</project>
